<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_interpreter_remote_type_form" model="ir.ui.view">
            <field name="name">res.interpreter_remote_type.form</field>
            <field name="model">res.interpreter.remote_type</field>
            <field name="arch" type="xml">
                <form string="Interpreter Type">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_interpreter_remote_type_tree" model="ir.ui.view">
            <field name="name">res.interpreter_remote_type.tree</field>
            <field name="model">res.interpreter.remote_type</field>
            <field name="arch" type="xml">
                <tree string="ID">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_interpreter_remote_type_filter" model="ir.ui.view">
            <field name="name">res.interpreter_remote_type.select</field>
            <field name="model">res.interpreter.remote_type</field>
            <field name="arch" type="xml">
                <search string="Search Interpreter Remote Type">
                    <field name="name"
                           filter_domain="['|', ('name','ilike',self),('code','ilike',self)]"/>
                    <field name="code"/>
                    <separator/>
                </search>
            </field>
        </record>
        <record id="action_interpreter_remote_type_form" model="ir.actions.act_window">
            <field name="name">Interpreter Remote Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.interpreter.remote_type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_interpreter_remote_type_tree"/>
            <field name="search_view_id" ref="view_interpreter_remote_type_filter"/>
        </record>
        <menuitem id="menu_interpreter_remote_type"
                  parent="contacts.res_partner_menu_config"
                  action="action_interpreter_remote_type_form"
                  sequence="50"/>
    </data>
</odoo>
