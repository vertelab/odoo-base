        <record id="partner_notes_view_tree" model="ir.ui.view">
            <field name="name">res.partner.notes.view.tree</field>
            <field name="model">res.partner.notes</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Notes" default_order="note_date">
                    <field name="partner_id"/>
                    <field name="name" />    
                    <field name="note"/>
                    <field name="note_date" widget="date"/>
                    <field name="is_confidential"/>
                    <field name="note_type" options="{'no_create_edit': True}"/>
                    <field name="note_number" groups="base.group_no_one"/>
                    <field name="office_id" options="{'no_create_edit': True}" />
                </tree>
            </field>
        </record>

         <record id="partner_notes_view_tree_button" model="ir.ui.view">
            <field name="name">Note Button</field>
            <field name="model">res.partner.notes</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Notes" default_order="note_date">
                    <field name="name"/>    
                    <field name="note"/>
                    <field name="note_date" widget="date"/>
                    <field name="is_confidential"/>
                    <field name="note_type" options="{'no_create_edit': True}"/>
                    <field name="note_number" groups="base.group_no_one"/>
                    <field name="office_id" options="{'no_create_edit': True}" />
                </tree>
            </field>
        </record>

          <record id="partner_note_type_view_tree" model="ir.ui.view">
            <field name="name">Note Type</field>
            <field name="model">res.partner.note.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Note types">
                    <field name="name" />    
                    <field name="description"/>
                </tree>
            </field>
        </record>
