<odoo>
    <data>
        <record id="res_partner_pivot" model="ir.ui.view">
            <field name="name">res.partner.pivot.view</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <pivot string="Contacts" sample="1">
                    <field name="sni_id" type="row"/>
                    <field name="ssyk_id" type="row" />
                </pivot>
            </field>
        </record>

        <record id="contacts.action_contacts" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity,pivot</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="context">{'default_is_company': True}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a contact in your address book
              </p><p>
                Odoo helps you to easily track all activities related to a customer.
              </p>
            </field>
        </record>

    </data>
</odoo>
