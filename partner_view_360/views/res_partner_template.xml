<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="403">
    <t t-call="web.login_layout">
      <div id="wrap">
        <div class="container">
          <h1 class="mt32">403: Forbidden</h1>
          <p class="alert alert-danger" t-if="error" role="alert">
            <t t-esc="error" />
          </p>
          <p class="alert alert-success" t-if="message" role="status">
            <t t-esc="message" />
          </p>
          <p>The jobseeker you were looking for could not be authorized.</p>
          <ul>
            <li t-if="our_token" t-esc="'Our Token %s  hashlib.sha1((secret + datatime + personnummer + bankid ).encode(utf-8)).hexdigest()' % our_token" />
            <li t-if="our_token1" t-esc="'Our Token1 %s hashlib.sha1((secret + datatime + personnummer + bankid ).encode(utf-8)).hexdigest().upper()' % our_token1" />
            <li t-if="our_token" t-esc="'Ext Token %s' % ext_token" />
            <li t-esc="'Post %s' % post" />
            <li t-esc="'Partner %s' % partner.company_registry if partner else None" />
            <li t-esc="'Action %s' % action" />
            <li t-if="url" t-esc="'Url %s' % url" />
            <li t-if="secret" t-esc="'Secret %s' % secret" />
            <li t-if="signatur" t-esc="'Signatur ACE %s Odoo %s' % (signatur,request.env.user.login)" />
          </ul>
        </div>
      </div>
    </t>
  </template>
  <template id="bankid">
    <t t-call="web.login_layout">
      <div id="wrap">
        <div class="container">
          <h1 class="mt32">403: Jobseeker not authenticated</h1>
          <p class="alert alert-danger" t-if="error" role="alert">
            <t t-esc="error" />
          </p>
          <p class="alert alert-success" t-if="message" role="status">
            <t t-esc="message" />
          </p>
          <p>The jobseeker you were looking for could not be authorized.</p>
          <ul>
            <li t-if="our_token" t-esc="'Our Token %s  hashlib.sha1((secret + datatime + personnummer + bankid ).encode(utf-8)).hexdigest()' % our_token" />
            <li t-if="our_token1" t-esc="'Our Token1 %s hashlib.sha1((secret + datatime + personnummer + bankid ).encode(utf-8)).hexdigest().upper()' % our_token1" />
            <li t-if="our_token" t-esc="'Ext Token %s' % ext_token" />
            <li t-esc="'Post %s' % post" />
            <li t-esc="'Partner %s' % partner.company_registry if partner else None" />
